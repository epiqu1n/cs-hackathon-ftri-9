{
  "root": true,
  "ignorePatterns": ["**/test", "**/__tests__"],
  "env": {
    "node": true,
    "browser": true,
    "es2021": true
  },
  "globals": { "schedule": "writable", "chrome": "readonly" },
  "extends": "eslint:recommended",
  "parserOptions": { "sourceType": "module" },
  "rules": {
    "indent": ["warn", 2, {
      "ignoreComments": true,
      "SwitchCase": 1
    }],
    "no-unused-vars": ["off", { "vars": "local" }],
    "prefer-const": "warn",
    "quotes": ["warn", "single"],
    "space-infix-ops": "warn"
  }
} 